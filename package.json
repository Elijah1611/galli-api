{
  "name": "galli-api",
  "version": "0.0.2",
  "description": "A Social Gallery App.",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^8.0.29",
    "@types/supertest": "^2.0.11",
    "@types/faker": "^5.5.8",
    "jest": "^27.2.4",
    "jest-chain": "^1.1.5",
    "jest-extended": "^0.11.5",
    "nodemon": "^2.0.13",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node": "3.3.0",
    "typescript": "3.3.3333"
  },
  "dependencies": {
    "class-transformer": "^0.4.0",
    "class-transformer-validator": "^0.9.1",
    "class-validator": "^0.13.1",
    "express": "^4.17.1",
    "faker": "^5.5.3",
    "node-fetch": "^3.0.0",
    "pg": "^8.4.0",
    "reflect-metadata": "^0.1.10",
    "sqlite3": "^5.0.2",
    "typeorm": "0.2.37",
    "typeorm-seeding": "^1.6.1",
    "unsplash-js": "^7.0.15"
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "nodemon src/index.ts",
    "test": "jest",
    "run": "ts-node --transpile-only ./node_modules/typeorm/cli.js migration:run",
    "generate": "ts-node --transpile-only ./node_modules/typeorm/cli.js migration:generate -n MigrationName",
    "revert": "ts-node --transpile-only ./node_modules/typeorm/cli.js migration:revert",
    "seed:config": "ts-node ./node_modules/typeorm-seeding/dist/cli.js config",
    "seed:run": "ts-node ./node_modules/typeorm-seeding/dist/cli.js seed",
    "schema:drop": "ts-node ./node_modules/typeorm/cli.js schema:drop",
    "schema:sync": "ts-node ./node_modules/typeorm/cli.js schema:sync"
  },
  "jest": {
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "./testSetup.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/*.test.+(ts|tsx|js)"
    ]
  }
}
